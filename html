@keyframes color-change {
    0% {
        color: blue;
    }

    25% {
        color: white;
    }

    50% {
        color: red;
    }

    75% {
        color: white;
    }

    100% {
        color: blue;
    }
}

h1 {
    animation: color-change 3s infinite;
}

